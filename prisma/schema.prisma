// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Comment {
  id        String   @id @default(cuid())
  postSlug  String
  author    String
  content   String   @db.Text
  sentiment Float    // Sentiment score from -5 to 5
  flagged   Boolean  @default(false) // Auto-flagged if too negative
  approved  Boolean  @default(true) // Can be manually unapproved
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([postSlug])
  @@index([createdAt])
}
